@model DetalhesCartaoModel
<div class="modal-content">

    <!-- Modal content-->
    <div class="modal-header">
        <h4 class="modal-title">Adicionar Novo Cartão</h4>
        <button type="button" class="close" data-dismiss="modal">&times;</button>
    </div>
    <div class="modal-body">
        <form asp-action="AdicionarNovoCartao" asp-controller="Carrinho">

            <partial name="../PartialViews/_CartaoPartial.cshtml" for="@Model" />

            <div class="form-check my-3">
                <input asp-for="EPreferencial" class="form-check-input required" />
                <label asp-for="EPreferencial" class="form-check-label"></label>
                <span asp-validation-for="EPreferencial" class="text-danger required"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Cadastrar" class="btn btn-primary" id="btn" />
            </div>

        </form>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Cancelar</button>
    </div>

</div>

