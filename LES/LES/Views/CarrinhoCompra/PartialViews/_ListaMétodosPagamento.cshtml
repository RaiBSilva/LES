@model IDictionary<DetalhesCartaoModel, double>
@*
    For more information on enabling MVC for empty projects, visit http://go.microsoft.com/fwlink/?LinkID=397860
*@

<a href="#" data-toggle="modal" data-target="#myModal">Alterar Métodos de Pagamento</a>
@foreach (var entry in Model)
{
    var codigo = entry.Key.Codigo; 
    <div class="jumbotron-fluid">
        <div class="container">
            <div class="row">
                <div class="col-sm-12"><h5>@entry.Key.Bandeira</h5></div>
                <div class="col-sm-8"><h6>****-****-****-**@codigo.Substring(codigo.Length - 3, 2)</h6></div>
                <div class="col-sm-4 text-center"><h6>@(entry.Key.Vencimento.Month)/@(entry.Key.Vencimento.Year)</h6></div>
            </div>
            <div class="row">
                <div class="col-sm-12 text-right text-black-50 font-weight-bold">
                    <h5>R$ @entry.Value.ToString("0.00").Replace('.', ',')</h5>
                </div>
            </div>
        </div>
    </div>
}

<div class="container">
    <div class="row justify-content-center">
        <button class="btn btn-secondary btnCartao text-center col-11 mx-1" id="buttonCartao" type="button" data-toggle="modal" data-target="#myModal">
            + Cartão
        </button>
    </div>
</div>