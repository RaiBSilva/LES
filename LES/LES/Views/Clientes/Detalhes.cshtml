@model LES.Models.ViewModel.ClienteCadastro

@{
    ViewData["Title"] = "Detalhes";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Detalhes</h1>

<div>
    <h4>Cliente</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DtNascimento)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DtNascimento)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Genero)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Genero)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Cpf)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Cpf)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Telefone)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Ddd) - @Html.DisplayFor(model => model.Telefone)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Enderecos)
        </dt>
        <dd class="col-sm-10">
            <dl class="row">
                @{ int i = 0;}
                @foreach (var endereco in Model.Enderecos)
                {
                    { i++; }
                    <dt class="col-sm-2">
                        Endereco  @i:<br>
                        @Html.ActionLink("Editar endereço.", "EditarEndereco", new { id = endereco.Id })
                    </dt>
                    <dd class="col-sm-10">

                        @endereco.Logradouro @endereco.Numero,
                        @endereco.Cidade - @endereco.Estado, @endereco.Estado
                        @if (endereco.ECobranca)
                        {
                            <p>É endereço de cobrança.</p>
                        }
                        @if (endereco.EEntrega)
                        {
                            <p>É endereço de entrega.</p>
                        }
                    </dd>
                }
            </dl>
        </dd>
        @{ i = 0; }
    </dl>
</div>
<div>
    @Html.ActionLink("Editar informações pessoais", "Editar", new { id = Model.Id })
</div>
<div>
    @Html.ActionLink("Alterar senha", "EditarSenha", new { id = Model.Id })
</div>
<div>
    <a asp-action="Index">De volta a listagem</a>
</div>
