<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SóRaiva</title>
    <link href="~/css/Shared/Normalize.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" crossorigin="anonymous" />
</head>
<body>
    <header>

        <nav class=" navbar navbar-dark navbar-toggleable-sm navbar-expand-xl fixed-top box-shadow mb-3 navbar-verde">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">SóRaiva</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div id="navbarSupportedContent" class="collapse navbar-collapse flex-sm-row-reverse">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link navbar-item" asp-action="Login" asp-controller="Admin">Logout</a>
                        </li>
                    </ul>
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link navbar-item" asp-action="Clientes" asp-controller="Admin">Clientes</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link navbar-item" asp-action="Pedidos" asp-controller="Admin">Pedidos</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link navbar-item" asp-action="ConfigLoja" asp-controller="Admin">Configurações da Loja</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>

    </header>
    <div class="container renderedBody">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!--<footer class="footer">
        <div class="container text-footer align-content-lg-start">
            &copy; 2021 - LES - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>-->

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script type="text/javascript">
        var carrinhoUrl = '@Url.Action("_CarrinhoPartial", "Carrinho")';
    </script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
