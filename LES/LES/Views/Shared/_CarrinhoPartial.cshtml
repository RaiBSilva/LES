@model LES.Models.ViewModel.Carrinho.CarrinhoModel

    <form>
        <div class="container dropdown-item">
            <div class="row">
                <h4 class="font-weight-light">Carrinho de compras</h4>
            </div>
            <div id="alertCarrinho"></div>
                <table class="table table-borderless row">
                    <tbody>
                        @foreach (var item in Model.Livros)
                        { 
                            <tr class="form-group">
                                <partial name="_ItemCarrinhoPartial" for="@item">
                            </tr> 
                        }
                    </tbody>
                </table>
        </div>
        <div class="dropdown-divider"></div>
        <div class="container">
            <div class="row justify-content-end mx-3">
                <h6 class="text-muted col-4">Preço:</h6><h5 class="text-left col-3">R$ @Model.PrecoTotal.ToString("0.00")</h5>
            </div>
            <div class="row justify-content-center">
                <button type="button" class="btn btn-outline-success btn-carrinho-comprar col-11" onclick="window.location.href='@Url.Action("Comprar","Livros")'" style="font-size:0.75rem">Confirmar compra</button>
            </div>
        </div>
    </form>
