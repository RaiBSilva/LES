@model IList<DetalhesCartaoModel>
@*
    For more information on enabling MVC for empty projects, visit http://go.microsoft.com/fwlink/?LinkID=397860
*@

@{ int i = 0;}
@foreach (var cartao in Model)
{
    <label>
        <input type="radio" name="cartao" @if (cartao.EPreferencial) { @: checked="checked"
               } class="card-input-element d-none" id="cartao_@i" value="@cartao.Id">
        <div class="card card-body bg-light d-flex flex-row justify-content-between align-items-center">
            <div class="container">
                <div class="row">
                    <h3 class="col-12 font-weight-light">
                        @cartao.Bandeira
                    </h3>
                    <h3 class="col-12 font-weight-light">
                        @cartao.Codigo.Substring(0, 4)-****-****-****
                    </h3>
                    <div class="col-12">
                        <div class="row">
                            <small class="col-12">@cartao.Nome</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </label>
}

<div class="container">
    <div class="row justify-content-center">
        <button class="btn btn-secondary btnCartao text-center col-11 mx-1" type="button" data-toggle="modal" data-target="#myModal">
            + Cartão
        </button>
    </div>
</div>