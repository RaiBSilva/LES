@model IList<DetalhesEnderecoModel>
@*
    For more information on enabling MVC for empty projects, visit http://go.microsoft.com/fwlink/?LinkID=397860
*@

@{ int i = 0;}
@foreach (var end in Model)
{
    <label>
        <input type="radio" name="enderecos" @if (end.EPreferencial) { @:checked="checked" 
               } class="card-input-element d-none" id="enderecos_@i" value="@end.Id">
        <div class="card card-body bg-light d-flex flex-row justify-content-between align-items-center">
            <div class="row">
                <h3 class="font-weight-light col-12">
                    @end.NomeEndereco
                </h3>
                <div class="col-12">
                    <div class="row">
                        <small class="col-12">@end.Logradouro, @end.Numero</small>
                    </div>
                    <div class="row">
                        <small class="col-12">@end.Complemento, @end.Cidade - @end.Cep</small>
                    </div>
                    <div class="row">
                        <small class="col-12">@end.Estado, @end.Pais</small>
                    </div>
                </div>
            </div>
        </div>
    </label>
}

<div class="container">
    <div class="row justify-content-center">
        <button class="btn btn-secondary botaoEndereco text-center col-7 mx-1" type="button" data-toggle="modal" data-target="#myModal">
            + Endereço
        </button>
        <button class="btn btn-outline-secondary botaoCartao text-center col-4 mx-1" type="button" data-toggle="modal" data-target="#myModal">
            Calcular CEP
        </button>
    </div>
</div>