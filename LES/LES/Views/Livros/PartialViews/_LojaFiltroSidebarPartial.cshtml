@model LES.Models.ViewModel.Livros.LojaFiltrosModel

    <form asp-action="Loja" asp-controller="Livros">

        <div id="divFiltros">
            <div id="divTitulo" class="form-group">
                <label asp-for="Titulo" class="control-label"></label>
                <input asp-for="Titulo" class="form-control required" />
                <span asp-validation-for="Titulo" class="text-danger"></span>
            </div>
            <div id="divAutor" class="form-group">
                <label asp-for="Autor" class="control-label"></label>
                <input asp-for="Autor" class="form-control required" type="date" />
                <span asp-validation-for="Autor" class="text-danger"></span>
            </div>
            <div id="divIsbn" class="form-group">
                <label asp-for="Isbn" class="control-label"></label>
                <input asp-for="Isbn" class="form-control required" />
                <span asp-validation-for="Isbn" class="text-danger"></span>
            </div>
            <div id="divEditora" class="form-group">
                <label asp-for="Editora" class="control-label"></label>
                <input asp-for="Editora" class="form-control required" />
                <span asp-validation-for="Editora" class="text-danger"></span>
            </div>
            <div id="divPrecoMin" class="form-group">
                <label asp-for="PrecoMin" class="control-label"></label>
                <input asp-for="PrecoMin" class="form-control required" />
                <span asp-validation-for="PrecoMin" class="text-danger"></span>
            </div>
            <div id="divPrecoMax" class="form-group">
                <label asp-for="PrecoMax" class="control-label"></label>
                <input asp-for="PrecoMax" class="form-control required" />
                <span asp-validation-for="PrecoMax" class="text-danger"></span>
            </div>
            <div id="divGenero" class="form-group">
                <label asp-for="Categoria" class="control-label"></label>
                <select asp-for="Categoria" class="form-control required" asp-items="Html.GetEnumSelectList<LES.Model.Entity.Categorias>()">
                </select>
                <span asp-validation-for="Categoria" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <input type="submit" value="Buscar" class="btn btn-primary" style="margin-left:0px 0px 10px 15px" id="btn" />
        </div>

    </form>
