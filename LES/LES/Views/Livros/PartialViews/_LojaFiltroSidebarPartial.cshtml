@model LES.Models.ViewModel.Livros.LojaFiltrosModel

    <form asp-action="Loja" asp-controller="Livros">
        <div id="divFiltros" class="container">
            <div class="form-group form-group-sm form-row">
                <div id="divTitulo" class="col-md-12">
                    <label asp-for="Titulo" class="control-label  text-center text-small"></label>
                    <input asp-for="Titulo" class="form-control form-control-sm input-sm required" />
                    <span asp-validation-for="Titulo" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group form-group-sm form-row">
                <div id="divAutor" class="col-md-12">
                    <label asp-for="Autor" class="control-label  text-center text-small"></label>
                    <input asp-for="Autor" class="form-control form-control-sm required" />
                    <span asp-validation-for="Autor" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group form-row">
                <div id="divIsbn" class="col-md-12">
                    <label asp-for="Isbn" class="control-label text-center text-small"></label>
                    <input asp-for="Isbn" class="form-control form-control-sm required" />
                    <span asp-validation-for="Isbn" class="text-danger"></span>
                </div>
                <div id="divEditora" class="col-md-12">
                    <label asp-for="Editora" class="control-label text-center text-small"></label>
                    <input asp-for="Editora" class="form-control form-control-sm required" />
                    <span asp-validation-for="Editora" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group form-row">
                <div id="divPrecoMin" class="col-md-6">
                    <label asp-for="PrecoMin" class="control-label text-center text-small"></label>
                    <input asp-for="PrecoMin" class="form-control form-control-sm required" />
                    <span asp-validation-for="PrecoMin" class="text-danger"></span>
                </div>
                <div id="divPrecoMax" class="col-md-6">
                    <label asp-for="PrecoMax" class="control-label text-center text-small"></label>
                    <input asp-for="PrecoMax" class="form-control form-control-sm required" />
                    <span asp-validation-for="PrecoMax" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group form-row">
                <div id="divDataMax" class="col-md-6">
                    <label for="dataMin" class="control-label text-center text-small">Data máxima</label>
                    <input id="dataMin" class="form-control form-control-sm required" type="date" />
                    <span class="text-danger"></span>
                </div>
                <div id="divDataMin" class="col-md-6">
                    <label for="dataMin" class="control-label text-center text-small">Data mínima</label>
                    <input id="dataMin" class="form-control form-control-sm required" type="date" />
                    <span class="text-danger"></span>
                </div>
            </div>
            <div class="form-group form-row">
                <div id="divCategoria" class="col-md-12">
                    <label asp-for="Categoria" class="control-label text-center text-small"></label>
                    <select asp-for="Categoria" class="form-control required" >
                    </select>
                    <span asp-validation-for="Categoria" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group form-row justify-content-center">
                <input type="submit" value="Buscar" class="btn btn-primary" style="margin-left:0px 0px 10px 15px" id="btn" />
            </div>


        </div>


    </form>
