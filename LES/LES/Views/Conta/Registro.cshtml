@model LES.Models.ViewModel.Conta.RegistroModel

@{
    ViewData["Title"] = "CadastroCliente";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="~/css/Shared/Sidebar.css" rel="stylesheet" />


<div id="conteudo">
    <div class="sidebar">
        <div>
            <button class="btn btn-success tablink" onclick="changeTab(event, 'Info')" style="width:100%">Informações</button>
        </div>
        <div>
            <button class="btn btn-light tablink" onclick="changeTab(event, 'Endereco')" style="width:100%">Endereço</button>
        </div>
        <div>
            <button class="btn btn-light tablink" onclick="changeTab(event, 'Cartao')" style="width:100%">Cartão de Crédito</button>
        </div>
    </div>
    <form asp-action="Registrar" class="col-md-5" style="margin-left:20%">
        <h1>Registre-se!</h1>
        <div id="Info" class="tab">
            <partial name="../Conta/PartialViews/_InfoPessoaisPartial.cshtml" for="InfoUsuario" />
            <partial name="../Conta/PartialViews/_SenhaPartial.cshtml" for="Senha" />
            <partial name="../Conta/PartialViews/_TelefonePartial.cshtml" for="Telefone" />
        </div>
        <div id="Endereco" class="tab" style="display:none">
            <partial name="../Conta/PartialViews/_EnderecoPartial.cshtml" for="Endereco" />
        </div>
        <div id="Cartao" class="tab" style="display:none">
            <partial name="../Conta/PartialViews/_CartaoPartial.cshtml" for="Cartao" />
        </div>
        <div class="form-group">
            <input type="submit" value="Logar" class="btn btn-primary" style="margin-left:0px 0px 10px 15px" id="btn" />
        </div>
    </form>
</div>
@section Scripts{

    <script src="~/js/Conta/Tabs.js"></script>
}