@model DetalhesCartaoModel

<div class="modal-content">

    <!-- Modal content-->
    <div class="modal-header">
        <h4 class="modal-title">Remover Cartão de Crédito</h4>
        <button type="button" class="close" data-dismiss="modal">&times;</button>
    </div>
    <div class="modal-body">
        <div>
            <div>
                <h5 class="text-danger">
                    Tem certeza que deseja excluir esse cartão? Essa ação é permanente.
                </h5>
            </div>

            <partial name="../PartialViews/_DlCartoesPartial.cshtml" for="@Model" />

            <div class="form-group">
                <button type="submit" value="@Model.Id" class="btn btn-danger" id="btn" onclick="window.location.href='@Url.Action("RemoverCartao","Conta", Model.Id)'">
                    Remover permanentemente
                </button>
            </div>

        </div>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Cancelar</button>
    </div>

</div>