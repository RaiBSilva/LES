@model TrocaModel

@using LES.Models.Entity

@{ bool cancelado = Model.Status == StatusTroca.Cancelada;
    double precoTotal = 0;}

<table class="table table-striped table-hover table-sm ">
    <thead>
        <tr>
            <th scope="col">Livro</th>
            <th scope="col">Preço</th>
            <th scope="col">Cancelar?</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>@Model.Livro.Titulo</td>
            <td>@Model.Livro.Preco</td>
            <td>
                @if (cancelado)
                {
                    <p class="text-warning">Troca cancelada.</p>
                }
                else
                {
                    <button class="btn btn-warning btnTroca" value="@Model.Livro.CodigoBarras" data-toggle="modal" data-target="#myModal">
                        Cancelar
                    </button>
                }
            </td>
        </tr>
    </tbody>

</table>
