@model IList<DetalhesEnderecoModel>


    <div>
        <div class="row">
            <h2 class="font-weight-light col-sm-12">
                Endereços
            </h2>
        </div>
        <div class="row">
            @foreach (var end in Model)
            {
                <div class="col-lg-6 my-1 card">
                    <partial name="../PartialViews/_DlEnderecoPartial.cshtml" for="@end" />
                    <dl>
                        <dd class="row justify-content-start mx-1">
                            <button class="btn btn-secondary botaoEndereco col-6 mr-3" type="button" data-toggle="modal" data-target="#myModal" value="@end.Id">
                                Editar este endereço
                            </button>
                            @if (Model.Count > 1)
                            {
                                <button class="btn btn-danger botaoRemoverEndereco col-2 mx-3" type="button" data-toggle="modal" data-target="#myModal" value="@end.Id">
                                    &times;
                                </button>
                            }

                            @if (!end.EPreferencial)
                            {
                                <button class="btn btn-outline-warning botaoFavoritarEndereco col-2 ml-3" type="button" data-toggle="modal" data-target="#myModal" value="@end.Id">
                                    &#9733;
                                </button>
                            }
                        </dd>
                    </dl>
                </div>
            }
        </div>
    </div>