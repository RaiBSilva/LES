@model LES.Models.ViewModel.Conta.DetalhesInfoModel
@*
    For more information on enabling MVC for empty projects, visit http://go.microsoft.com/fwlink/?LinkID=397860
*@

@{ string notaUsuario = Model.NotaUsuario.ToString();
    string classDt = "col-sm-6";
    string classDd = "col-sm-10";
    int prcntUsuario = Model.NotaUsuario *20 ;

    IDictionary<int, string> cores = new Dictionary<int, string>();
    cores[1] = "bg-danger";
    cores[2] = "bg-warning";
    cores[3] = "bg-success";
    cores[4] = "bg-info";
    cores[5] = "bg-primary";

    }

<div class="row">
    <h2 class="font-weight-light col-sm-12">
        Informações Pessoais
    </h2>
</div>

<dl class="row">
    <dt class="@classDt">
        @Html.DisplayNameFor(model => model.Nome)
    </dt>
    <dd class="@classDd">
        <div></div>
        @Html.DisplayFor(model => model.Nome)
    </dd>
    <dt class="@classDt">
        @Html.DisplayNameFor(model => model.NotaUsuario)
    </dt>
    <dd class="@classDd">
        <div class="container">
            <div class="progress">
                <div class="progress-bar @cores[Model.NotaUsuario]" role="progressbar" style="width:@(prcntUsuario)%" aria-valuenow=" @notaUsuario " aria-valuemin="0" aria-valuemax="5">@notaUsuario/5</div>
            </div>
        </div>
    </dd>
    <dt class="@classDt">
        @Html.DisplayNameFor(model => model.Cpf)
    </dt>
    <dd class="@classDd">
        @Html.DisplayFor(model => model.Cpf)
    </dd>
    <dt class="@classDt">
        @Html.DisplayNameFor(model => model.DtNascimento)
    </dt>
    <dd class="@classDd">
        @Html.DisplayFor(model => model.DtNascimento)
    </dd>
    <dt class="@classDt">
        @Html.DisplayNameFor(model => model.Genero)
    </dt>
    <dd class="@classDd">
        @Html.DisplayFor(model => model.Genero)
    </dd>
    <dt class="@classDt">
        @Html.DisplayNameFor(model => model.Email)
    </dt>
    <dd class="@classDd">
        @Html.DisplayFor(model => model.Email)
    </dd>
</dl>