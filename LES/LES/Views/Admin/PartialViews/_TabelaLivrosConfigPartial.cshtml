@model LES.Models.ViewModel.Admin.ListaAdminLivroModel

<div class="row mb-2">
    <div class="col-sm-12">
        <button type="button" class="btn-success btn-lg btn-block btnAddLivro" data-toggle="modal" data-target="#myModal">
            Cadastrar novo livro
        </button>
    </div>
</div>
<div class="row">
    @if (Model.Livros.Count > 0)
    {
        <table class="table table-striped">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">Id</th>
                    <th scope="col">Capa</th>
                    <th scope="col">Título</th>
                    <th scope="col">Preço</th>
                    <th scope="col">Estoque</th>
                    <th scope="col">Ações</th>
                    <th scope="col">Inativar</th>
                </tr>
                <tr>
                    <th scope="col">
                        <input id="filtroLivrosId" class="form-control" placeholder="1..." />
                    </th>
                    <th scope="col">
                    </th>
                    <th scope="col">
                        <input id="filtroLivrosTitulo" class="form-control" placeholder="Memórias Póstumas.../Machado de Assis..." />
                    </th>
                    <th scope="col">
                        De <input id="filtroValorMin" class="form-control" type="number" step="0.01" min="0" placeholder="R$ 13,40..." />
                        Até <input id="filtroValorMax" class="form-control" type="number" step="0.01" min="0" placeholder="R$ 13,40..." />
                    </th>
                    <th scope="col">
                        De <input id="filtroEstoqueMin" class="form-control" type="number" min="0" placeholder="15" />
                        Até <input id="filtroEstoqueMax" class="form-control" type="number" min="0" placeholder="30" />
                    </th>
                    <th scope="col">
                        <input id="filtroLivrosInativado" class="form-check-input" type="checkbox" />
                        <label for="filtroLivrosInativado" class="form-check-label">Incluir inativados?</label>
                    </th>
                    <th scope="col">
                        <button class="btn btn-primary btnBuscarLivro">Buscar</button>
                    </th>
                </tr>
            </thead>
            <tbody>

                @foreach (var livro in Model.Livros)
                {
                    <tr>
                        <th scope="row">@livro.Id</th>
                        <td>
                            <img src="~/img/the-Winds-of-Winter-cover.jpg" style="max-height:2rem" />
                        </td>
                        <td><span class="font-weight-bold">@livro.Titulo</span> por @livro.Autor</td>
                        <td>R$ @livro.Preco.ToString("0.00").Replace(".", ".")</td>
                        <td><small class="font-weight-lighter">x</small>@livro.Estoque</td>
                        <td>
                            <button type="button" class="btn btn-outline-success btnEntradaEstoqueLivro" data-toggle="modal" data-target="#myModal" value="@livro.Id">Entrada no Estoque</button>
                            <button type="button" class="btn btn-outline-info btnVisualizarLivro" data-toggle="modal" data-target="#myModal" value="@livro.Id">Visualizar</button>
                            <button type="button" class="btn btn-outline-info btnEditarLivro" data-toggle="modal" data-target="#myModal" value="@livro.Id">Editar</button>
                        </td>
                        <td><button type="button" class="btn btn-danger btnInativarLivro" data-toggle="modal" data-target="#myModal" value="@livro.Id">Inativar</button></td>
                    </tr>
                }
            </tbody>
        </table>
        <nav aria-label="Paginação">
            <ul class="pagination">
                <li class="page-item">
                    <a class="page-link" href="#" aria-label="Previous">
                        <span aria-hidden="true">&laquo;</span>
                        <span class="sr-only">Previous</span>
                    </a>
                </li>
                <li class="page-item"><a class="page-link" href="#">1</a></li>
                <li class="page-item">
                    <a class="page-link" href="#" aria-label="Next">
                        <span aria-hidden="true">&raquo;</span>
                        <span class="sr-only">Next</span>
                    </a>
                </li>
            </ul>
        </nav>


    }
</div>