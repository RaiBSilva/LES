@model LES.Models.ViewModel.Admin.AdminTrocaModel

<div class="modal-content">
    <!-- Modal content-->
    <div class="modal-header">
        <h4 class="modal-title">Detalhes da troca.</h4>
        <button type="button" class="close" data-dismiss="modal">&times;</button>
    </div>
    <div class="modal-body">
        <partial name="../PartialViews/_InfoTrocaPartial.cshtml" for="@Model" />
        <form asp-action="StatusTroca" asp-controller="Admin">
            <div class="row">
                <input asp-for="Id" readonly style="display:none" hidden />
                <div class="col-md-8">
                    <label asp-for="Status"></label>
                    <select asp-for="Status" asp-items="Html.GetEnumSelectList<LES.Models.Entity.StatusTroca>()">
                    </select>
                </div>
                <div class="col-md-4">
                    <input type="submit" value="Mudar Status" class="btn btn-primary" id="btn" />
                </div>
            </div>
        </form>
        <div class="modal-footer">
            <div class="row">
                <div class="col-12">
                    <button type="button" class="btn btn-default btn-block" data-dismiss="modal">Cancelar</button>
                </div>
            </div>
        </div>
    </div>
</div>
