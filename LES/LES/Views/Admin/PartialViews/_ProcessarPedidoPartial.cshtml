@model LES.Models.ViewModel.Admin.AdminPedidoModel

@{ string operacao = ViewBag.Operacao;
    string cor = operacao == "Aprovar" ? "btn-outline-success" : "btn-outline-danger"; } 

<div class="modal-content">
    <!-- Modal content-->
    <div class="modal-header">
        <h4 class="modal-title">@ViewBag.Operacao Pedido?</h4>
        <button type="button" class="close" data-dismiss="modal">&times;</button>
    </div>
    <div class="modal-body">
        <partial name="../PartialViews/_InfoPedidoPartial.cshtml" for="@Model" />
        <div class="modal-footer">
            <button type="button" class="btn @cor" onclick="window.location.href='@Url.Action((operacao+"Pedido"),"Admin", Model.Codigo)'">@operacao</button>
            <button type="button" class="btn btn-default" data-dismiss="modal">Cancelar</button>
        </div>
    </div>
</div>