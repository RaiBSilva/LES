@model LES.Models.ViewModel.Admin.GrupoPrecoModel


@{ string statusCliente = Model.Inativo ? "Reativar" : "Inativar";
    string corCliente = Model.Inativo ? "btn-primary" : "btn-danger";
}

<div class="modal-content">
    <!-- Modal content-->
    <div class="modal-header">
        <h4 class="modal-title">@statusCliente Livro</h4>
        <button type="button" class="close" data-dismiss="modal">&times;</button>
    </div>
    <div class="modal-body">
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <h5 class="font-weight-light">Tem certeza que quer @statusCliente esse grupo de preços?</h5>
                    @if (!Model.Inativo)
                    {
                        <h4 class="text-danger">ATENÇÃO!</h4>
                        <div>Inativar um grupo de preços vai inativar todos os livros a ele associados. Para reverter isso, será necessário reativar manualmente os livros, após a reativação ou alteração do grupo de preços.</div>
                    }
                </div>
            </div>
        </div>

        <div class="modal-footer">
            <button type="button" class="btn @corCliente" onclick="window.location.href='@Url.Action("InativarReativarGrupoPreco","Admin", Model.Id)'">@statusCliente</button>
            <button type="button" class="btn btn-default" data-dismiss="modal">Sair</button>
        </div>
    </div>
</div>