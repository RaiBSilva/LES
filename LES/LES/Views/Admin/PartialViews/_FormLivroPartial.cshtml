@model LES.Models.ViewModel.Admin.AdminLivroModel

<div class="row my-2">
    <div id="editarCapa" class="col-md-3">
        <img src="~/img/icon-image-512.webp" style="max-width:100px" />
    </div>
    <div class="col-md-9">
        <div class="form-group">
            <div class="col-sm-12">
                <label asp-for="Titulo" class="font-weight-light"></label>
            </div>
            <div class="col-sm-12">
                <input asp-for="Titulo" class="form-control" value="" />
                <span asp-validation-for="Titulo" class="text-danger required"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-12">
                <label asp-for="Autor" class="font-weight-light"></label>
            </div>
            <div class="col-sm-12">
                <input asp-for="Autor" class="form-control" value="" />
                <span asp-validation-for="Autor" class="text-danger required"></span>
            </div>
        </div>
    </div>
    <div class="col-12">
        <div class="form-group">
            <input type="file" class="custom-file-input" />
            <label class="custom-file-label" for="editarCapa">Escolher capa</label>
        </div>
    </div>
</div>

<div class="row mt-2">
    <div class="col-4">
        <label asp-for="Editora" class="font-weight-light"></label>
        <input asp-for="Editora" class="form-control required" value="" />
        <span asp-validation-for="Editora" class="text-danger required"></span>
    </div>
    <div class="col-4">
        <label asp-for="Edicao" class="font-weight-light"></label>
        <input asp-for="Edicao" type="number" class="form-control required" value="" />
        <span asp-validation-for="Edicao" class="text-danger required"></span>
    </div>
    <div class="col-4">
        <label asp-for="DtLancamento" class="font-weight-light"></label>
        <input asp-for="DtLancamento" type="month" class="form-control required" />
        <span asp-validation-for="DtLancamento" class="text-danger required"></span>
    </div>
</div>


<div class="row mt-2">
    <div class="col-3">
        <label asp-for="Isbn" class="font-weight-light"></label>
        <input asp-for="Isbn" class="form-control required" value="" />
        <span asp-validation-for="Isbn" class="text-danger required"></span>
    </div>
    <div class="col-3">
        <label asp-for="Paginas" class="font-weight-light"></label>
        <input asp-for="Paginas" class="form-control required" type="number" min="1" value="" />
        <span asp-validation-for="Paginas" class="text-danger required"></span>
    </div>
    <div class="col-6">
        <label for="dimensoes" class="font-weight-light">Dimensões</label>
        <div id="dimensoes" class="row">
            <div class="col-4">
                <input asp-for="Comprimento" class="form-control required" type="number" min="0" step="0.1" value="" />cm
                <span asp-validation-for="Comprimento" class="text-danger required"></span>
            </div>
            <div class="col-4">
                <input asp-for="Altura" class="form-control required" type="number" min="0" step="0.1" value="" />cm
                <span asp-validation-for="Altura" class="text-danger required"></span>
            </div>
            <div class="col-4">
                <input asp-for="Largura" class="form-control required" type="number" min="0" step="0.1" value="" />cm
                <span asp-validation-for="Largura" class="text-danger required"></span>
            </div>
        </div>
    </div>
</div>

<div class="row mt-2">
    <div class="col-sm-12">
        <label asp-for="Sinopse" class="font-weight-light">Sinopse</label>
        <div class="col-12">
            <textarea asp-for="Sinopse" class="form-control required" style="min-height:8rem">
                                </textarea>
        </div>
        <span asp-validation-for="Sinopse" class="text-danger required"></span>
    </div>
</div>