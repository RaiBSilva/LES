@model LES.Models.ViewModel.Admin.AdminClienteModel
@using LES.Models.ViewModel.Conta

@{ string statusCliente = Model.Inativo ? "Reativar" : "Inativar";
    string corCliente = Model.Inativo ? "btn-success" : "btn-danger";
    }

    <div class="modal-content">
        <!-- Modal content-->
        <div class="modal-header">
            <h4 class="modal-title">@statusCliente Cliente?</h4>
            <button type="button" class="close" data-dismiss="modal">&times;</button>
        </div>
        <div class="modal-body">
            <partial name="../PartialViews/_DlInfoPessoais.cshtml" for="@Model.InfoUsuario" />
            <div class="modal-footer">
                <button type="button" class="btn @corCliente" onclick="window.location.href='@Url.Action("InativarReativarCliente","Admin", Model.InfoUsuario.Codigo)">@statusCliente</button>
                <button type="button" class="btn btn-default" data-dismiss="modal">Cancelar</button>
            </div>
        </div>
    </div>