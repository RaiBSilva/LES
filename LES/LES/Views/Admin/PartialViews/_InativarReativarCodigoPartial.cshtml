@model LES.Models.Entity.CodigoPromocional

@*
    For more information on enabling MVC for empty projects, visit http://go.microsoft.com/fwlink/?LinkID=397860
*@

@{ string operacao = Model.Inativo ? "Reativar" : "Inativar";
    string cor = Model.Inativo ? "btn-primary" : "btn-danger";
}

<div class="modal-content">
    <!-- Modal content-->
    <div class="modal-header">
        <h4 class="modal-title">@operacao Código promocional</h4>
        <button type="button" class="close" data-dismiss="modal">&times;</button>
    </div>
    <div class="modal-body">
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <h5 class="font-weight-light">Tem certeza que quer @operacao esse código promocional?</h5>
                </div>
            </div>
        </div>

        <div class="modal-footer">
            <button type="button" class="btn @cor" onclick="window.location.href='@Url.Action("InativarReativarCodigoPromo","Admin", Model.Id)'" data-dismiss="modal">@operacao</button>
            <button type="button" class="btn btn-default" data-dismiss="modal">Sair</button>
        </div>
    </div>
</div>