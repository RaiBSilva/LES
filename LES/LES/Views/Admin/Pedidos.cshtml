@model LES.Models.ViewModel.Admin.PaginaPedidosModel

@{
    ViewData["Title"] = "Livros";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="row justify-content-center"><h1 class="col-12 text-center">Base de Transações Efetivadas</h1></div>
<div class="row">
    <div class="col-12 mb-3 border-bottom">
    </div>
</div>
<div class="row">
    <table class="table">
        <caption>Lista de transações efetivadas</caption>
        <thead class="thead-dark">
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Usuário</th>
                <th scope="col">Data</th>
                <th scope="col">Valor</th>
                <th scope="col">Status</th>
                <th scope="col">Detalhes</th>
            </tr>
            <tr>
                <th scope="col"><input id="filtroId" class="form-control" placeholder="1..."/></th>
                <th scope="col"><input id="filtroCliente" class="form-control" placeholder="José..."/></th>
                <th scope="col">
                    De <input id="filtroDataMin" class="form-control" type="date" placeholder="Data mínima..."/>
                    Até <input id="filtroDataMax" class="form-control" type="date" placeholder="Data máxima..." />
                </th>
                <th scope="col">
                    De <input id="filtroValorMin" class="form-control" type="number" step="0.01" min="0" placeholder="R$ 13,40..."/>
                    Até <input id="filtroValorMax" class="form-control" type="number" step="0.01" min="0" placeholder="R$ 13,40..." />
                </th>
                <th scope="col">
                    <select class="form-control" asp-items="Html.GetEnumSelectList<LES.Models.Entity.StatusPedidos>()">
                        <option label=" "></option>
                    </select>
                </th>
                <th scope="col">
                    <button class="btn btn-primary btnBuscar">Buscar</button>
                </th>
            </tr>
        </thead>
        <tbody id="corpoTabela">
            
            @foreach (var pedido in Model.Pedidos) { 
                <partial name="../Admin/PartialViews/_TabelaPedidosPartial.cshtml" for="@pedido" />
            }

        </tbody>
    </table>
    <nav aria-label="Paginação">
        <ul class="pagination">
            <li class="page-item">
                <a class="page-link" href="#" aria-label="Previous">
                    <span aria-hidden="true">&laquo;</span>
                    <span class="sr-only">Previous</span>
                </a>
            </li>
            <li class="page-item"><a class="page-link" href="#">1</a></li>
            <li class="page-item">
                <a class="page-link" href="#" aria-label="Next">
                    <span aria-hidden="true">&raquo;</span>
                    <span class="sr-only">Next</span>
                </a>
            </li>
        </ul>
    </nav>
</div>

<div class="modal fade" id="myModal">
    <div class="modal-dialog modal-xl">
        
    </div>
</div>

@section Scripts
{

    <script type="text/javascript">
        var urls = urls || {};
        urls.VisualizarPedido = '@Url.Action("_VisualizarPedidoPartial", "Admin")';
        urls.AprovarPedido = '@Url.Action("_AprovarPedidoPartial", "Admin")';
        urls.NegarPedido = '@Url.Action("_NegarPedidoPartial", "Admin")';
        urls.CancelarPedido = '@Url.Action("_CancelarPedidoPartial", "Admin")';

    </script>
    <script src="~/js/Admin/CarregadorPartialViewPedidos.js"></script>
}