@model LES.Models.ViewModel.Conta.CartaoBaseModel
@*
    For more information on enabling MVC for empty projects, visit http://go.microsoft.com/fwlink/?LinkID=397860
*@


    <div id="divInformacoesPessoaisPartial" class="container">
        <div class="form-group row" id="divNome">
            <div class="col-sm-9">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control required" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="col-sm-3" id="divBandeira">
                <label asp-for="Bandeira" class="control-label"></label>
                <select asp-for="Bandeira" class="form-control required" asp-items="@(new SelectList(Model.Bandeiras, "Id", "Nome"))">
                </select>
                <span asp-validation-for="Bandeira" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row" id="divCodigo">
            <div class="col-sm-6">
                <label asp-for="Codigo" class="control-label"></label>
                <input asp-for="Codigo" class="form-control required" />
                <span asp-validation-for="Codigo" class="text-danger"></span>
            </div>
            <div class="col-sm-3" id="divCvv">
                <label asp-for="Cvv" class="control-label"></label>
                <input asp-for="Cvv" class="form-control required" />
                <span asp-validation-for="Cvv" class="text-danger"></span>
            </div>
            <div class="col-sm-3" id="divVencimento">
                <label asp-for="Vencimento" class="control-label"></label>
                <input asp-for="Vencimento" class="form-control required" type="month" />
                <span asp-validation-for="Vencimento" class="text-danger"></span>
            </div>
        </div>

    </div>
