@model DetalhesCartaoModel

    <div class="modal-content">

        <!-- Modal content-->
        <div class="modal-header">
            <h4 class="modal-title">Editar Cartão de Crédio</h4>
            <button type="button" class="close" data-dismiss="modal">&times;</button>
        </div>
        <div class="modal-body">
            <form asp-action="EditarCartao" asp-controller="Conta" class="requiredForm">

                <div hidden>
                    <label asp-for="Id" class="control-label"></label>
                    <input asp-for="Id" class="form-control required" readonly />
                    <span asp-validation-for="Id" class="text-danger required"></span>
                </div>

                <partial name="../PartialViews/_CartaoPartial.cshtml" for="@Model" />

                @if (Model.Edicao != true)
                {
                    <div class="form-check form-switch form-check-inline">
                        <input asp-for="EPreferencial" class="form-check-input required" />
                        <label asp-for="EPreferencial" class="form-check-label"></label>
                        <span asp-validation-for="EPreferencial" class="text-danger required"></span>
                    </div>
                }

                <div class="form-group">
                    <input type="submit" value="Editar" class="btn btn-primary" id="btn" />
                </div>

            </form>
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-default" data-dismiss="modal">Cancelar</button>
        </div>

    </div>