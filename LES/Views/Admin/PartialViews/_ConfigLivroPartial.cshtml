@model LES.Models.ViewModel.Admin.ConfigLojaLivroModel

@{ string operacao = ViewBag.Operacao == "add" ? "Adicionar" : "Editar"; }

    <div class="modal-content">
        <!-- Modal content-->
        <div class="modal-header">
            <h4 class="modal-title">@operacao Livro</h4>
            <button type="button" class="close" data-dismiss="modal">&times;</button>
        </div>
        <div class="modal-body">
            @if (ViewBag.Operacao == "add")
            {
                <form asp-action="AdicionarLivro" asp-controller="Admin">
                    <div class="container">

                        <partial name="../PartialViews/_FormLivroPartial.cshtml" for="Livro" />

                        <div class="row mt-2">
                            <div class="col-4">
                                <label asp-for="Livro.GrupoPreco" class="font-weight-light"></label>
                                <select asp-for="Livro.GrupoPreco" class="form-control" asp-items="@(new SelectList(Model.GrupoPrecos, "Id", "Nome"))">
                                </select>
                            </div>
                            <div class="col-4">
                                <label asp-for="Livro.Preco" class="font-weight-light">Preço</label>
                                <input asp-for="Livro.Preco" type="number" step="0.01" class="form-control required" />
                                <span asp-validation-for="Livro.Preco" class="text-danger required"></span>
                            </div>
                            <div class="col-4">
                                <label asp-for="Livro.CodigoBarras" class="font-weight-light"></label>
                                <input asp-for="Livro.CodigoBarras" class="form-control required" value="" />
                                <span asp-validation-for="Livro.CodigoBarras" class="text-danger required"></span>
                            </div>
                        </div>

                    </div>

                    <div class="modal-footer">
                        <button type="submit" class="btn btn-primary" data-dismiss="modal">@operacao</button>
                        <button type="button" class="btn btn-default" data-dismiss="modal">Sair</button>
                    </div>
                </form>
            }
            else if (ViewBag.Operacao == "edit")
            {
                <form asp-action="EditarLivro" asp-controller="Admin">
                    <div class="container">

                        <div hidden style="display:none">
                            <input asp-for="Livro.Id" class="form-control required" readonly/>
                        </div>

                        <partial name="../PartialViews/_FormLivroPartial.cshtml" for="Livro" />

                        <div class="row mt-2">
                            <div class="col-4">
                                <label asp-for="Livro.GrupoPreco" class="font-weight-light"></label>
                                <select asp-for="Livro.GrupoPreco" class="form-control" asp-items="@(new SelectList(Model.GrupoPrecos, "Id", "Nome"))">
                                </select>
                            </div>
                            <div class="col-4">
                                <label asp-for="Livro.Preco" class="font-weight-light">Preço</label>
                                <input asp-for="Livro.Preco" type="number" step="0.01" class="form-control required" />
                                <span asp-validation-for="Livro.Preco" class="text-danger required"></span>
                            </div>
                            <div class="col-4">
                                <label asp-for="Livro.CodigoBarras" class="font-weight-light"></label>
                                <input asp-for="Livro.CodigoBarras" class="form-control required" value="" />
                                <span asp-validation-for="Livro.CodigoBarras" class="text-danger required"></span>
                            </div>
                        </div>

                    </div>

                    <div class="modal-footer">
                        <button type="submit" class="btn btn-primary" data-dismiss="modal">@operacao</button>
                        <button type="button" class="btn btn-default" data-dismiss="modal">Sair</button>
                    </div>
                </form>
            }
        </div>
    </div>
