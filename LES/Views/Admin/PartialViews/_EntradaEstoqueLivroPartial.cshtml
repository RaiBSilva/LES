@model LES.Models.ViewModel.Admin.EntradaEstoqueModel

<div class="modal-content">
    <!-- Modal content-->
    <div class="modal-header">
        <h4 class="modal-title">Entrada no Estoque</h4>
        <button type="button" class="close" data-dismiss="modal">&times;</button>
    </div>
    <div class="modal-body">
        <form asp-action="EntradaEstoque" asp-controller="Admin">
            <div class="container">

                <div class="hidden" style="display:none">
                    <input asp-for="CodigoBarras" class="form-control required" readonly/>
                </div>

                <div class="row my-2">
                    <div class="col-md-6">
                        <img src="~/img/the-Winds-of-Winter-cover.jpg" style="max-width:100px" />
                    </div>
                    <div class="col-md-6">
                        <div class="row">
                            <div class="col-sm-12">
                                <h3 class="font-weight-light">@Model.Titulo</h3>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-12">
                                <h5 class="text-muted">@Model.Autor</h5>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="form-row form-group">
                    <div class="col-4">
                        <label asp-for="Quantia" class="font-weight-light"></label>
                        <input asp-for="Quantia" class="form-control required" type="number" min="0" step="1" value="" />
                        <span asp-validation-for="Quantia" class="text-danger required"></span>
                    </div>
                    <div class="col-8">
                        <label asp-for="Fornecedor" class="font-weight-light"></label>
                        <input asp-for="Fornecedor" class="form-control required" value="" />
                        <span asp-validation-for="Fornecedor" class="text-danger required"></span>
                    </div>
                </div>

                <div class="form-row form-group">
                    <div class="col-6">
                        <label asp-for="Custo" class="font-weight-light">Valor de Custo</label>
                        <input asp-for="Custo" class="form-control" type="number" min="0" value="1" step="0.01" />
                        <span asp-validation-for="Custo" class="text-danger required"></span>
                    </div>
                    <div class="col-6">
                        <label asp-for="DtEntrada" class="font-weight-light">Data de Entrada</label>
                        <input asp-for="DtEntrada" class="form-control" type="date" />
                        <span asp-validation-for="Custo" class="text-danger required"></span>
                    </div>
                </div>

            </div>
            <div class="modal-footer">
                <button type="submit" class="btn btn-outline-success" data-dismiss="modal">Atualizar Estoque</button>
                <button type="button" class="btn btn-default" data-dismiss="modal">Sair</button>
            </div>


        </form>
    </div>
</div>