@if (User.Identity.IsAuthenticated)
{
    <li class="nav-item">
        <a class="nav-link navbar-item" asp-action="Detalhes" asp-controller="Conta">Minha Conta</a>
    </li>
    <li class="nav-item">
        <div class="dropdown">
            <a class="nav-link navbar-item dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Olá, @(User.Identity.Name.Split(' ')[0])</a>
            <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                <a class="dropdown-item" asp-action="Logout" asp-controller="Conta">Logout</a>
            </div>
        </div>
    </li>
}
else
{
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link navbar-item text-white" asp-action="Login" asp-controller="Conta">Login</a>
        </li>
        <li class="nav-item">
            <a class="nav-link navbar-item text-white" asp-action="Registro" asp-controller="Conta">Registrar</a>
        </li>
    </ul>
}
